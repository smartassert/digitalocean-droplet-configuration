parameters:
  level: 8
  paths:
    - src
    - tests
  inferPrivatePropertyTypeFromConstructor: true
  ignoreErrors:
    -
      message: '#Result of \|\| is always true#'
      path: src/Configuration.php
    -
      message: '#Parameter \#1 \$names of method .+\\Configuration::withNames\(\) expects array<string>#'
      path: tests/ConfigurationTest.php
    -
      message: '#Parameter \#1 \$sshKeys of method .+\\Configuration::withSshKeys\(\) expects array<int>#'
      path: tests/ConfigurationTest.php
    -
      message: '#Parameter \#1 \$volumes of method .+\\Configuration::withVolumes\(\) expects array<string>#'
      path: tests/ConfigurationTest.php
    -
      message: '#Parameter \#1 \$tags of method .+\\Configuration::withTags\(\) expects array<string>#'
      path: tests/ConfigurationTest.php
